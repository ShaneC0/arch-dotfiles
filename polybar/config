[colors]
background = ${xrdb:color0:#222}
# foreground = ${xrdb:color7:#222}
foreground = #eeffffff
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/mybar]
override-redirect = true
height = 35
width = 1905
offset-x = 10
offset-y = 5
module-margin = 4
padding = 5
radius = 14.0
background = ${colors.background}
foreground = ${colors.foreground}
locale = en_US.UTF-8
line-size = 2
modules-right = alsa date
modules-center = polywins
modules-left = network


[module/date]
type = internal/date
date = %Y/%m/%d%
time = %H:%M
label = %date% %time%

[module/network]
type = internal/network
background = ${colors.middle}
interface = wlp2s0u4
interval = 3.0
label-connected = %essid% Up: %upspeed% Down: %downspeed%
label-disconnected = No connection established.

[module/alsa]
type = internal/alsa
label-volume = Volume: %percentage%%
label-muted = Muted

[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 1
tail = true
